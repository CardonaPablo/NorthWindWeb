@page
@model WebApplication1.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row my-4">
    <div class="col-6">
        <h1 class="display-2">Suppliers</h1>
    </div>
    <div class="col-6">
    <p class="lead mr-2">Enter a name for a new supplier:</p>
    <form method="POST">
        <div>
            <input class="form-control" asp-for="Supplier.CompanyName" />
        </div>
        <input type="submit" class="btn btn-primary mt-2" />
    </form>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table">
            <thead class="thead-inverse thead-dark">
                <tr>
                    <th>Company Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (string name in Model.Suppliers)
                {
                    <tr>
                        <td>@name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
